{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Yarp": "Information"
    }
  },
  "ReverseProxy": {
    "Routes": {
      "quiz-route": {
        "ClusterId": "quiz-cluster",
        "Match": {
          "Path": "/api/quiz/{**remainder}"
        }
      },
      "cert-route": {
        "ClusterId": "cert-cluster",
        "Match": {
          "Path": "/api/certificates/{**remainder}"
        }
      }
    },
    "Clusters": {
      "quiz-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "https://localhost:7052"
          }
        }
      },
      "cert-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "https://localhost:7018"
          }
        }
      }
    }
  }
}