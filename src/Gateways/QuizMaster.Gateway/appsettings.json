{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Yarp": "Information"
    }
  },
  "JwtSettings": {
    "Secret": "QM26-v9#Zk8$Lp2!nX5*rT9@mB4^yQ7&hJ1(wV3)xC6_dS0+fG8=kL2-pZ9!mQ4",
    "Issuer": "QuizMaster.Identity",
    "Audience": "QuizMaster.Users"
  },
  "ReverseProxy": {
    "Routes": {
      "auth-route": {
        "ClusterId": "auth-cluster",
        "Match": { "Path": "/api/auth/{**remainder}" }
      },
      "quiz-submit-route": {
        "ClusterId": "quiz-cluster",
        "AuthorizationPolicy": "AuthenticatedUser",
        "Match": { "Path": "/api/quiz/{id}/submit" },
        "Metadata": { "Order": "1" }
      },
      "quiz-public-route": {
        "ClusterId": "quiz-cluster",
        "Match": { "Path": "/api/quiz/{**remainder}" },
        "Metadata": { "Order": "2" }
      },
      "cert-route": {
        "ClusterId": "cert-cluster",
        "AuthorizationPolicy": "AuthenticatedUser",
        "Match": { "Path": "/api/certificates/{**remainder}" }
      }
    },
    "Clusters": {
      "auth-cluster": { "Destinations": { "dest1": { "Address": "https://localhost:7158" } } },
      "quiz-cluster": { "Destinations": { "dest1": { "Address": "https://localhost:7052" } } },
      "cert-cluster": { "Destinations": { "dest1": { "Address": "https://localhost:7018" } } }
    }
  }
}